@page
@using GoodsTime.Models.Extensions
@model GoodsTime.Pages.Goods.PrintModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="jp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoodsTime</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GoodsTime.styles.css" asp-append-version="true" />
</head>
<body>
	<div class="row">
		@foreach (var item in Model.Items)
		{
			<div class="col-sm-4">
				<div class="card md-3" style="max-width: 540px; margin: 5px;">
					<div class="row g-0">
						<div class="col-md-4">
							<div class="qrcode" data-hash="@item.ConvertJsonData().CreateHash()" style="padding:10px"></div>
						</div>
						<div class="col-md-8">
							<div class="card-body">
							<h6 class="card-title">@item.Number</h6>
							<p class="card-text"><small>@item.Description</small></p>
							<p class="card-text"><small>Consist inc.</small></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="/js/jquery.qrcode.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script>
		$(function () {
			$('div.qrcode').each(function(i){
				var hash = $(this).data('hash')
				var s3url = "http://consisthackathon2023app.s3-website-ap-northeast-1.amazonaws.com/?id=" + hash
				$(this).qrcode({ width: 100, height: 100, text: s3url })
			})
		})
	</script>
</body>
</html>
