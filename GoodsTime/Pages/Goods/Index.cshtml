@page
@model GoodsTime.Pages.Goods.IndexModel
@{
}

<div class="row">
    <div class="col-md-12">
        <form method="POST">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">出力</th>
                        <th scope="col">備品番号</th>
                        <th scope="col">登録日時</th>
                        <th scope="col">最終更新日時</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td><input class="form-check-input" type="checkbox" value="@item.Id" name="Targets" /></td>
                            <td>@item.Number</td>
                            <td>@item.RegisterDate</td>
                            <td>@item.UpdateDate</td>
                            <td><a class="btn btn-outline-info" href="./Goods/Edit?id=@item.Id" role="button">Info</a></td>
                        </tr>
                    }
                </tbody>
            </table>

            <input class="btn btn-info" asp-page-handler="Print" asp-page="Print" type="submit" value="Print" />
            <a class="btn btn-info" href="./Goods/Add" role="button">Add</a>
        </form>
    </div>
</div>